@model Demo.Models.Models.EmployedPersonViewModel

@{
	ViewBag.Title = Model.PageTitle;
}

<h2>Employed</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>EmployedPersonModel</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<label class="control-label col-md-2" for="FirstName">FirstName</label>
			<div class="col-md-10">
				<input class="form-control text-box single-line" id="FirstName" name="Person[FirstName]" type="text" value="" />
				<span class="field-validation-valid text-danger" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2" for="LastName">LastName</label>
			<div class="col-md-10">
				<input class="form-control text-box single-line" id="LastName" name="Person[LastName]" type="text" value="" />
				<span class="field-validation-valid text-danger" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2" for="WorkerId">WorkerId</label>
			<div class="col-md-10">
				<input class="form-control text-box single-line" data-val="true" data-val-number="The field WorkerId must be a number." data-val-required="The WorkerId field is required." id="WorkerId" name="Person[WorkerId]" type="number" value="" />
				<span class="field-validation-valid text-danger" data-valmsg-for="WorkerId" data-valmsg-replace="true"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
